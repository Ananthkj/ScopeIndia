
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <title>Student Registration Form</title>
</head>

<body class=" bg-primary" style="">
    <h1 class="text-center text-light p-2">Registration Form</h1>
    <!--Column 1-->
    <div class="container" style="margin-top:5%;">
       <form asp-action="RegisterForm" method="post" enctype="multipart/form-data">



            <div class="row text-center justify-content-center p-1 mt-1" style="background-color:lightsteelblue">
            <div class="row col-4    align-content-between p-3" style="height: 900px;width: 45%;">


                <div class="row">
                    <div class="col-4 text-center">
                        <label class="form-label  fs-4">Full name</label>
                    </div>
                    <div class="col-8 text-center">
                        <input type="text" class="form-control" name="Name">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label  fs-4">Date of Birth</label>
                    </div>
                    <div class="col-8">
                        <input type="date" class="form-control" name="Dateofbirth">
                    </div>
                </div>
                <div class="row">
                    <div class="row">
                        <div class="col-4">
                            <label class="form-label fs-4">Gender</label>
                        </div>
                        <div class="col-1">
                                <input type="radio" value="male" class="form-check-input fs-6" name="Gender">
                        </div>
                        <div class="col-2">
                            <label class="form-label fs-5">Male</label>
                        </div>
                        <div class="col-1">
                                <input type="radio" value="female"  class="form-check-input fs-6" name="Gender">
                        </div>
                        <div class="col-2">
                            <label class="form-label fs-5">Female</label>
                        </div>
                        <div class="col-1">
                                <input type="radio" value="others" class="form-check-input fs-6" name="Gender">
                        </div>
                        <div class="col-1">
                            <label class="form-label fs-5">Others</label>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Qualification</label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" name="Qualification">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Courses</label>
                    </div>
                    <div class="col-8 ">
                        <select class="form-select" id="courses" name="Courses">
                            <optgroup label="Programing Course">
                                <option selected>Choose...</option>
                                <option>PHP Advanced Full Stack</option>
                                <option>PHP Intermediate Full Stack</option>
                                <option>Java Advanced Full Stack</option>
                                <option>Java Intermediate Full Stack</option>
                                <option>.Net Advanced Full Stack</option>
                                <option>.Net Intermediate Full Stack</option>
                                <option>Python Advanced Full Stack</option>
                                <option>Python Intermediate Full Stack</option>
                            </optgroup>
                            <optgroup label="Testing Course">
                                <option>Testing Advanced(Manual/Automation)</option>
                                <option>Testing Intermediate(Manual/Automation)</option>
                                <option>Testing Manual(ISTQB)</option>
                            </optgroup>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Mobile</label>
                    </div>
                    <div class="col-8">
                        <input type="tel" class="form-control" name="Mobile" placeholder="Contact No..">
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Email</label>
                    </div>
                    <div class="col-8">
                        <input type="email" class="form-control" name="Email">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Guardian</label>
                    </div>
                    <div class="col-8">
                        <input type="tel" class="form-control" name="Guardian" placeholder="Contact No..">
                    </div>
                </div>
                <div class="row">
                    <div class="row">
                        <div class="col-5">
                            <label class="form-label fs-4">Class Mode</label>
                        </div>
                        <div class="col-1">
                            <input type="radio" value="Online" class="form-check-input fs-6" name="Time">
                        </div>
                        <div class="col-2">
                            <label class="form-label fs-5">Online</label>
                        </div>
                        <div class="col-1 ">
                            <input type="radio" value="ClassRoom" class="form-check-input fs-6" name="Time">
                        </div>
                        <div class="col-2">
                            <label class="form-label fs-5">ClassRoom</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Location</label>
                    </div>
                    <div class="col-8 ">
                        <select class="form-select" name="Branch" id="Branch">
                            <option selected>Choose Location...</option>
                            <option>Technopark TVM</option>
                            <option>Thampanoor TVM</option>
                            <option>Kochi</option>
                            <option>Nagercoil</option>
                        </select>
                    </div>
                </div>
            </div>

            <!--Column 2-->

            <div class=" row col-4 align-content-between p-3" style="height: 900px;width: 45%;">
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-5">Guardian Name</label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" name="GuardianName">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-6">Guardian Occupation</label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" name="Occupation">
                    </div>
                </div>
                <div class="row">

                    <div class="col-6">
                        <label class="form-label fs-4 text-start">Prefered Class Timing</label>
                    </div>

                    <div class="row m-2">
                        <div class="col-1 ">
                            <input type="radio" class="form-check-input fs-6" name="ClassTime">
                        </div>
                        <div class="col-5">
                            <label class="form-label fs-6">Between 7am-9am</label>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-1 ">
                            <input type="radio" class="form-check-input fs-6" name="ClassTime">
                        </div>
                        <div class="col-5">
                            <label class="form-label fs-6">Between 9am-11am</label>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-1">
                            <input type="radio" class="form-check-input fs-6" name="ClassTime">
                        </div>
                        <div class="col-5">
                            <label class="form-label fs-6">Between 11am-1pm</label>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-1">
                            <input type="radio" class="form-check-input fs-6" name="ClassTime">
                        </div>
                        <div class="col-5">
                            <label class="form-label fs-6">Between 2pm-4pm</label>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-1 ">
                            <input type="radio" class="form-check-input fs-6" name="ClassTime">
                        </div>
                        <div class="col-5">
                            <label class="form-label fs-6">Between 4pm-6pm</label>
                        </div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Address</label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" name="Addresses">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Country</label>
                    </div>
                    <div class="col-8">
                            <select class="form-select" aria-label="Default select example" id="Country" name="Country">
                                <option selected>Open this select menu</option>
                                <option value="India">India</option>
                                <option value="USA">USA</option>
                                <option value="Canada">Canada</option>
                                <option value="France">France</option>
                            </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">State</label>
                    </div>
                    <div class="col-8">
                            <select class="form-select" aria-label="Default select example" id="State" name="States">
                                <option selected>Open this select menu</option>
                                
                            </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">City</label>
                    </div>
                    <div class="col-8">
                            <select class="form-select" aria-label="Default select example" id="City" name="City">
                                <option selected>Open this select menu</option>
                               
                            </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="form-label fs-4">Pin Code</label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" name="Pincode">
                    </div>
                </div>
                    <div class="row">
                        <div class="col-4">
                            <label class="form-label fs-4">Choose a File:</label>
                        </div>
                        <div class="col-8">
                            <input type="file" name="myFile" class="form-control">
                        </div>
                    </div>
                    


            </div>
            <!--Registration Submit-->
            <div class="row p-3">
                <div class="col-12">
                    <button  class="btn text-light bg-dark fs-4">
                        Complete
                        Registration
                    </button>
                </div>
            </div>

        </div>

       </form>
    </div>

    <script>
        var stateArray = ["Tamilnadu", "Bangalore", "Kerala", "Hyderabad", "Mumbai"];
        var districtArray = ["Kanyakumari", "Thirunelveli", "Madurai", "Trichy", "Salem"];
        var element = document.getElementById('Country');
        var element2 = document.getElementById('City');
        element.addEventListener("change", changeState);

        function changeState() {
            var countryElement = document.getElementById('Country');
            var stateElement = document.getElementById('State');
            var districtElement = document.getElementById('City');

            // Clear existing options in the state dropdown
            stateElement.innerHTML = "";
            districtElement.innerHTML = "";

            if (countryElement.value == "India") {
                for (var i = 0; i < stateArray.length; i++) {
                    var option1 = document.createElement('option');
                    var text = document.createTextNode(stateArray[i]);
                    option1.appendChild(text);
                    stateElement.appendChild(option1);
                }
                if (stateElement.value == "Tamilnadu") {
                    for (i = 0; i < districtArray.length; i++) {
                        var cityOption = document.createElement('option');
                        var text2 = document.createTextNode(districtArray[i]);
                        cityOption.appendChild(text2);
                        districtElement.appendChild(cityOption);
                    }

                }

            }
        }

    </script>


</body>

</html>

