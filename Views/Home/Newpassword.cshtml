
@{
    ViewData["Title"] = "Create New Password";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Newpassword" method="post">
    <div class="row p-2">
        <div class="col-3">
            <a href="Index"><input type="button" class="form-control bg-primary text-light" name="Defaultpassword" value="Keep Default Password" /></a>
        </div>
    </div>
    <div class="row border border-2 p-2">
        <div class="col-2 p-1">
            <label class="form-label text-center border border-2">New Password:</label>
        </div>
        <div class="col-5">
            
            <input type="text" class="form-control" name="Newpassword" />
        </div>      
    </div>
    <div class="row border border-2 p-2">
        <div class="col-2 p-1">
            <label class="form-label text-center border border-2">Confirm Password:</label>
        </div>
        <div class="col-5">

            <input type="text" class="form-control" name="Confirmpassword" />
        </div>
    </div>
    <button>Submit</button>

</form>

        <h2>@ViewBag.Message</h2>